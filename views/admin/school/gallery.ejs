<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin | Gallery | KKV</title>

    <!-- CSS  -->
    <link rel="stylesheet" href="/static/app/css/admincss/header.css">
    <link rel="stylesheet" href="/static/app/css/admincss/modal.css">
    <link rel="stylesheet" href="/static/app/css/admincss/gallery.css">
    <!-- Icons Css  -->
    <link rel="stylesheet" href="https://unicons.iconscout.com/release/v4.0.8/css/line.css" />
</head>

<body>
    <%- include('../partials/header.ejs') %>
    <main>
        <!-- --NAV-LISTS-- -->
        <%- include('../partials/nav.ejs') %>

        <!-- --CONTENT-- -->
        <div class="content-container"><!-- for display property -->
            <div class="common-container flex">
                <h3 class="uppercase color">Gallery</h3>
                <a class="btn" onclick="openModalwindow()">Upload <i class="uil uil-image-upload"></i></a>
            </div>
    
            <div class="gallery-container common-container flex">
                <% results?.forEach((el)=>{ %>
                    <div class="image-container">
                        <i class="uil uil-trash-alt" id="<%= el.img_id %>" onclick="deleteSchoolGalleryImage(this, 'school')"></i>
                        <img src="/static/<%= el.img_link %>" alt="image">
                    </div>
                <% }) %>
            </div>
        </div>


        <!-- --POPUP BOX-- -->
        <div class="modal-container hide">
            <div class="popupModal galleryModal">
                <form id="gallery-img">
                    <div class="field">
                        <input type="file" name="scl-gallery" id="file-staff" multiple="true">
                    </div>
                </form>
                <div class="field field-btns flex">
                    <a class="btn uppercase" onclick="insertGalleryImage('school')">Upload <i class="uil uil-image-upload"></i></a>
                    <a class="btn uppercase" onclick="closeModalwindow()">cancel</a>
                </div>
            </div>
        </div>
    </main>


    <!-- javascript -->
    <script src="/static/app/js/index.js"></script>
    <script src="/static/app/js/gal.js"></script>
</body>

</html>